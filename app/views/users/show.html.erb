<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h2>
        Name:
        <%= @user.name %><br>
        Email:
        <%= @user.email %>
      </h2>
    </section>
    <%= link_to "edit", edit_user_path(@user.id), class: "btn btn-primary"%>
    <%= link_to " delete", @user, method: :delete,
                                   data: { confirm: "You sure?" }, class: "btn btn-danger"%>


  </aside>
</div>